{
    "editor.fontFamily": "FiraCode Nerd Font SemiBold",
    "editor.fontLigatures": true,
    "editor.fontSize": 13,
    "[go]": {
        "editor.insertSpaces": true,
        "togglequotes.chars": [
            "\"",
            "'",
            "`"
        ],
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
        "editor.tabSize": 2
    }
}